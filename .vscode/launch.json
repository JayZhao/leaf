    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Leaf + Hysteria",
            "cargo": {
                "args": [
                    "build",
                    "--bin=leaf",
                    "--package=leaf-cli"
                ],
                "filter": {
                    "name": "leaf",
                    "kind": "bin"
                }
            },
            "args": [
                "--config",
                "/Users/zhaojianyin/Dev/VPN/leaf/config.conf"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "info"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug domain_rule tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=leaf"
                ],
                "filter": {
                    "name": "leaf",
                    "kind": "lib"
                }
            },
            "args": ["config::domain_rule", "--nocapture", "--test-threads=1"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        }
    ]
}